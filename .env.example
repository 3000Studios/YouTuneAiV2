# YouTuneAiV2 Environment Template
# Copy this file to .env and fill in your actual credentials

# === SERVER CONFIGURATION ===
NODE_ENV=development
PORT=3000
API_PORT=3001
HOST=localhost

# === DATABASE CONFIGURATION ===
DATABASE_URL=postgresql://username:password@localhost:5432/youtuneai_dev
REDIS_URL=redis://localhost:6379
MONGODB_URL=mongodb://localhost:27017/youtuneai_dev

# === BLACKVAULT API ===
# Get your API keys from: https://blackvault.com/dashboard
BLACKVAULT_API_URL=https://api.blackvault.com/v2
BLACKVAULT_API_KEY=your_blackvault_api_key_here
BLACKVAULT_SECRET_KEY=your_blackvault_secret_key_here

# === IONOS HOSTING ===
# Get your API credentials from IONOS Developer Portal
IONOS_API_URL=https://api.ionos.com/v1
IONOS_API_KEY=your_ionos_api_key_here
IONOS_SECRET=your_ionos_secret_here
IONOS_DOMAIN=yourdomain.com
IONOS_HOSTING_ID=your_hosting_id_here

# === WORDPRESS INTEGRATION ===
WP_URL=https://yourdomain.com/wp
WP_API_URL=https://yourdomain.com/wp-json/wp/v2
WP_USERNAME=your_wp_username
WP_PASSWORD=your_wp_password
WP_APPLICATION_PASSWORD=your_wp_app_password

# === PAYMENT PROCESSING ===
# Stripe (https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# PayPal (https://developer.paypal.com)
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# === AI SERVICES ===
# OpenAI (https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# Anthropic Claude (https://console.anthropic.com)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI (https://aistudio.google.com/app/apikey)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# === SOCIAL MEDIA AUTOMATION ===
# Twitter/X API (https://developer.twitter.com)
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_SECRET=your_twitter_access_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# YouTube API (https://console.cloud.google.com)
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here

# Facebook/Meta (https://developers.facebook.com)
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token_here

# Instagram (https://developers.facebook.com/docs/instagram)
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here

# === EMAIL & MARKETING ===
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain_here
SENDGRID_API_KEY=your_sendgrid_api_key_here
SMTP_HOST=your_smtp_host_here
SMTP_PORT=587
SMTP_USER=your_smtp_username_here
SMTP_PASS=your_smtp_password_here

# === ANALYTICS & MONITORING ===
GOOGLE_ANALYTICS_ID=your_ga_tracking_id_here
GOOGLE_TAG_MANAGER_ID=your_gtm_id_here
MIXPANEL_TOKEN=your_mixpanel_token_here
HOTJAR_ID=your_hotjar_id_here
SENTRY_DSN=your_sentry_dsn_here

# === SECURITY & ENCRYPTION ===
JWT_SECRET=generate_a_secure_random_32_char_string_here
JWT_REFRESH_SECRET=generate_another_secure_random_32_char_string_here
ENCRYPTION_KEY=generate_a_secure_encryption_key_here
SESSION_SECRET=generate_a_secure_session_secret_here

# === BACKUP & STORAGE ===
# AWS (https://console.aws.amazon.com)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name
AWS_CLOUDFRONT_DISTRIBUTION=your_cloudfront_distribution_id

# Google Cloud (https://console.cloud.google.com)
GOOGLE_CLOUD_PROJECT_ID=your_gcp_project_id
GOOGLE_CLOUD_KEY_FILE=./config/secrets/gcp-service-account.json

# === DOMAIN & SSL ===
DOMAIN=localhost
SSL_CERT_PATH=./config/ssl/cert.pem
SSL_KEY_PATH=./config/ssl/key.pem

# === LOGGING & DEBUGGING ===
LOG_LEVEL=debug
LOG_FILE=./logs/development.log
DEBUG_MODE=true
ENABLE_PROFILING=false

# === RATE LIMITING ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# === CREATOR NETWORK ===
CREATOR_COMMISSION_RATE=0.15
AFFILIATE_TRACKING_DOMAIN=localhost:3000

# === LEGAL & COMPLIANCE ===
GDPR_ENABLED=true
CCPA_ENABLED=true
COOKIE_CONSENT_REQUIRED=true
DATA_RETENTION_DAYS=365