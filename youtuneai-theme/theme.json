{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    },
    "color": {
      "palette": [
        {
          "slug": "primary",
          "color": "#9d00ff",
          "name": "Primary Purple"
        },
        {
          "slug": "secondary",
          "color": "#00e5ff",
          "name": "Ocean Blue"
        },
        {
          "slug": "accent",
          "color": "#00ff88",
          "name": "Neon Green"
        },
        {
          "slug": "platinum",
          "color": "#e5e4e2",
          "name": "Platinum"
        },
        {
          "slug": "diamond-silver",
          "color": "#c0c0c0",
          "name": "Diamond Silver"
        },
        {
          "slug": "gunmetal",
          "color": "#2a3439",
          "name": "Gunmetal"
        },
        {
          "slug": "marble-white",
          "color": "#f8f8ff",
          "name": "Marble White"
        },
        {
          "slug": "marble-black",
          "color": "#0f0f0f",
          "name": "Marble Black"
        },
        {
          "slug": "background-dark",
          "color": "#050510",
          "name": "Background Dark"
        },
        {
          "slug": "background-card",
          "color": "rgba(20, 20, 40, 0.95)",
          "name": "Card Background"
        }
      ],
      "gradients": [
        {
          "slug": "primary-gradient",
          "gradient": "linear-gradient(135deg, #9d00ff 0%, #00e5ff 100%)",
          "name": "Primary Gradient"
        },
        {
          "slug": "neon-gradient",
          "gradient": "linear-gradient(45deg, #00ff88 0%, #9d00ff 50%, #00e5ff 100%)",
          "name": "Neon Gradient"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "slug": "primary",
          "fontFamily": "\"Orbitron\", sans-serif",
          "name": "Orbitron"
        },
        {
          "slug": "secondary",
          "fontFamily": "\"Raleway\", sans-serif",
          "name": "Raleway"
        },
        {
          "slug": "monospace",
          "fontFamily": "\"Martian Mono\", monospace",
          "name": "Martian Mono"
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "0.875rem",
          "name": "Small"
        },
        {
          "slug": "medium",
          "size": "1rem",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "1.25rem",
          "name": "Large"
        },
        {
          "slug": "x-large",
          "size": "1.75rem",
          "name": "Extra Large"
        },
        {
          "slug": "xx-large",
          "size": "2.25rem",
          "name": "Extra Extra Large"
        }
      ]
    },
    "spacing": {
      "spacingScale": {
        "steps": 0
      },
      "spacingSizes": [
        {
          "size": "0.5rem",
          "slug": "10",
          "name": "1"
        },
        {
          "size": "1rem",
          "slug": "20",
          "name": "2"
        },
        {
          "size": "1.5rem",
          "slug": "30",
          "name": "3"
        },
        {
          "size": "2rem",
          "slug": "40",
          "name": "4"
        },
        {
          "size": "3rem",
          "slug": "50",
          "name": "5"
        },
        {
          "size": "4rem",
          "slug": "60",
          "name": "6"
        }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--background-dark)",
      "text": "var(--wp--preset--color--marble-white)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--secondary)"
    }
  },
  "customTemplates": [
    {
      "name": "games",
      "title": "Games Page"
    },
    {
      "name": "streams",
      "title": "Streams Page"
    },
    {
      "name": "garage",
      "title": "YouTune Garage"
    },
    {
      "name": "vr-room",
      "title": "VR Room"
    },
    {
      "name": "admin-control",
      "title": "Admin Control Center"
    }
  ],
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ]
}