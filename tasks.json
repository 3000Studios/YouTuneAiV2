{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ðŸŽ¤ Start Voice Controller (Auto)",
      "type": "shell",
      "command": "python",
      "args": [
        "ai_controller.py"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
