/* Boss Mode Activated: VS Code Ultimate AI Stack Config */
{
  // 🧠 AI-Boosted Python Dev
  "python.analysis.typeCheckingMode": "strict",
  "python.defaultInterpreterPath": "python",
  "python.formatting.provider": "black",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.envFile": "${workspaceFolder}/secrets.env",

  // 💪 JS/TS/Node Dev Memory Boost
  "typescript.tsserver.maxTsServerMemory": 8192,
  "javascript.implicitProjectConfig.checkJs": true,
  "terminal.integrated.env.windows": {
    "NODE_OPTIONS": "--max-old-space-size=8192",
    "DOTENV_CONFIG_PATH": "${workspaceFolder}/secrets.env"
  },

  // ⚙️ Format and Auto-Fix
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll": true
  },

  // 📁 File Associations & Emmet
  "files.associations": {
    "*.php": "php",
    "*.env": "dotenv"
  },
  "emmet.includeLanguages": {
    "php": "html"
  },

  // 🔥 Git & Terminal Integration
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "push",

  // 🤖 GitHub Copilot Max Power
  "github.copilot.enable": true,
  "github.copilot.inlineSuggest.enable": true,
  "github.copilot.advanced": {
    "fixAll": true
  },

  // 🌈 UI & Dev Experience
  "workbench.colorTheme": "Default Dark+",
  "workbench.startupEditor": "welcomePage",
  "extensions.ignoreRecommendations": false
}
